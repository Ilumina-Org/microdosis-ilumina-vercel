---
import MainHeader from "./MainHeader.astro";

// Layout.astro

const {
  title = "Ayahuasca - Ilumina",
  description = "Organización que acompaña ceremonias de ayahuasca, promoviendo la sanación interior y el despertar espiritual con respeto y guía profesional",
  image,
  frontmatter,
  robots,
} = Astro.props;

---
<!doctype html>
<html lang="en">
  <MainHeader
    title={title}
    description={description}
    image={image}
    frontmatter={frontmatter}
    robots={robots}
  />
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    font-family:
      Inter, Roboto, "Helvetica Neue", "Arial Nova", "Nimbus Sans", Arial,
      sans-serif;
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
    overflow-x: hidden !important;
    position: relative;
    /* scroll-snap-type: y mandatory; */
  }
  * {
    box-sizing: border-box;
  }
</style>
