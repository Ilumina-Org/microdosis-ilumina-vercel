---
const { title, price, originalPrice, savings } = Astro.props;
---

<div class="package-header">
  <h1>{title}</h1>
  <p class="price">S/. {price.toFixed(2)}</p>
  {
    originalPrice && (
      <div class="price-details">
        <span class="original-price">
          Precio regular S/. {originalPrice.toFixed(2)}
        </span>
        <span class="savings">(Ahorra S/. {savings})</span>
      </div>
    )
  }
</div>

<style>
  .package-header {
    padding: 1.8rem;
    background:
      radial-gradient(
        41.74% 98.84% at 61.04% 47.01%,
        rgba(0, 0, 0, 0) 0%,
        rgba(0, 0, 0, 0.2) 100%
      ),
      linear-gradient(68.99deg, #084737 10.95%, #0a4c39 60.57%, #0c523b 103.7%),
      #0a4c39;
    color: #f5f5f5;
    text-align: center;
  }

  .package-header h1 {
    font-size: 1.8rem;
    margin-bottom: 0.5rem;
    font-weight: 700;
    color: whitesmoke;
  }

  .price {
    font-size: 2.2rem;
    font-weight: 700;
    margin: 1rem 0;
    color: #eee;
  }

  .price-details {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    margin-top: 0.5rem;
  }

  .original-price {
    text-decoration: line-through;
    opacity: 0.7;
    font-size: 1.1rem;
    color: #ccc;
  }

  .savings {
    font-weight: 600;
    background: rgba(255, 255, 255, 0.2);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    display: inline-block;
    margin: 0 auto;
    font-size: 1rem;
    color: #ddd;
  }
</style>
