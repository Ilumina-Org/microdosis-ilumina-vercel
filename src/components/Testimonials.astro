---
import astroLogo from "../assets/astro.svg";
import background from "../assets/background.svg";
import staticModel from "../assets/model_static.png";
import Review from "./ReactComponents/Review";
---

<section id="testimonios" class="container" style={{ display: "flex", flexDirection: "column" }}>

  <div
    style={{
      display: "flex",
      justifyContent: "center",
      alignContent: "center",
    }}
  >
  <div style={{
    backgroundColor: 'white',
    width: '700px',
    height: '400px',
    borderRadius: '20px',
    boxShadow: '0px 10px 10px rgb(0, 0, 0, 0.25)'
    }}></div>
</div>


  <div style={{ width: "100%", borderColor: "white", textAlign: "center" }}>
    <h2 style={{ fontWeight: 300, fontSize: "35px", color: "#C1DC3A" }}>
      Opiniones de nuestros clientes
    </h2>
  </div>
  <div
    style={{
      display: "flex",
      justifyContent: "center",
      alignContent: "center",
    }}
  >
    <Review client:load  imageUrl={staticModel.src} />
  </div>
</section>

<style>
  * {
    /* border: 1px solid white; */
  }
  .container {
    background: #013726;
   // height: 100%;
    padding: 2rem;
    scroll-snap-align: start;
  }

  #section {
    border: 1px solid white;
  }
</style>
